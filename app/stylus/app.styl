*, *:before, *:after
      -moz-box-sizing: border-box
      -webkit-box-sizing: border-box
      box-sizing: border-box

html
    color: #000
    font-family: "open_sansregular"
    text-shadow: 0px 0px 6px rgba(0,0,0,0.2)
    width: 100%
    background-color: #F3EFE0

footer
    position: fixed
    display: block
    text-align: right
    right: 0
    bottom: 0
    width: auto
    height: auto
    padding: 10px

[ng-view]
    padding: 3em

p, li, h1, h2, h3, h4, h5, h6
    text-align: center
    font-family: "open_sansregular"
    margin-bottom: 0.2em

h1
    font-size: 7em

li, p
    font-size: 2em

iframe
    width: 100%
    height: 470px

a:visited
    color: rgb(0,0,238)
